extends ../layout/index 

block contenido
    h1(class="text-center text-3xl font-bold pt-10") La biblioteca de 
        span(class="text-indigo-500 text-center text-3xl font-bold") Lunnariss
    h2(class="text-center text-2xl font-extrabold mt-10")= pagina

    if errores 

        div(class="max-w-md mx-auto my-10" role="alert")
            each error in errores
                p(class="bg-red-600 text-white uppercase font-bold py-2 mb-1 text-xs text-center rounded-md")= error.msg

    div(class="mt-8 mx-auto max-w-md")
        div(class="bg-white py-8 px-4 shadow-md rounded-md")
            form(method="POST" action="/auth/registro" class="space-y-5")
                div
                    label(for="nombre" class="block text-sm uppercase text-gray-700 mb-2 font-bold") Ingresa tu nombre
                    input(type="text" name="nombre" id="nombre" class="w-full px-3 py-2 border border-gray-400 rounded-md placeholder-gray-400" value= usuario ? usuario.nombre : '')
                div
                    label(for="email" class="block text-sm uppercase text-gray-700 mb-2 font-bold") Ingresa tu email
                    input(type="email" name="email" id="email" class="w-full px-3 py-2 border border-gray-400 rounded-md placeholder-gray-400" value= usuario ? usuario.email : '')
                div
                    label(for="password" class="block text-sm uppercase text-gray-700 mb-2 font-bold") Ingresa tu contraseña
                    input(type="password" name="password" id="password" class="w-full px-3 py-2 border border-gray-400 rounded-md placeholder-gray-400")  
                div
                    label(for="repeat_password" class="block text-sm uppercase text-gray-700 mb-2 font-bold") Repite tu contraseña
                    input(type="password" name="repeat_password" id="repeat_password" class="w-full px-3 py-2 border border-gray-400 rounded-md placeholder-gray-400") 

                div(class="flex flex-col gap-2 items-center justify-between")
                    a(href="" class="text-gray-500") ¿Ya tienes cuenta? Inicia sesión
                    a(href="" class="text-gray-500") ¿Olvidaste tu contraseña?


                input(class="w-full cursor-pointer transform transition duration-500 bg-indigo-600 hover:bg-indigo-800 text-white font-bold rounded-lg py-2" type="submit" value="Crear Cuenta")     